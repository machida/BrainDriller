<!DOCTYPE html>
<html>
  <head>
    <title>BrainDriller</title>
    <%= render 'layouts/meta' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main>
      <div class="main-body">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <%= yield %>
      </div>
    </main>
    <%= render 'layouts/labo' %>
    <%= render 'layouts/footer' %>
  </body>
</html>
