<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: drill, local: true) do |f| %>
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :tag_names, "タグ(空白区切り)" %>
      <%= f.text_field :tag_names, class: 'form-control' %>
      <%= f.submit "作成する", class: "btn btn-primary" %>
      <div></div>
    <% end %>
  </div>
</div>

<%= search_form_for search, remote: true, enforce_utf8: false do |f| %>
  <%= f.label :title_cont, "問題タイトル"%>
  <%= f.search_field :title_cont %>
  <div class="actions"><%= f.submit "検索" %></div>
<% end %>
<% if request.url.match(/commit/)%>
  <table>
  <% problems.each do |problem| %>
    <tr>
      <td><p><%= problem.id %></p></td>
      <td><p><%= link_to "#{ problem.name}", "problems/#{problem.id}" %></p></td>
    </tr>
  <% end %>
  </table>
<% end %>
